{% extends 'base.html.twig' %}

{% block title %}Secret Form!
{% endblock %}

{% block body %}
	<div class="mt-4">
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
		<div class="form-group">
			{{ form_label(form.secretText) }}
			{{ form_widget(form.secretText, {'attr':{'class':'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.remainingViews) }}
			{{ form_widget(form.remainingViews, {'attr':{'class':'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.expiresAt) }}
			{{ form_widget(form.expiresAt, {'attr':{'class':'form-control'}}) }}
		</div>
		{{ form_widget(form.save) }}
		{{ form_end(form) }}
	</div>
{% endblock %}
